<%- include ('../partials/head') %>
<body class="body-box">
    <div class="img-box">
        <div class="box-me navigation">
            <%- include ('../partials/go-home') %>
            <%- include ('../partials/go-back') %>
        </div>
        <figure>
            <img src="/img/tomato.png">
        </figure>
    </div>
    <div class="content-box">
        <ul>
            <li>
                <a class="cool-link" href="/movies/add">
                    Agregar película
                </a>
            </li>
        </ul>
        <h1>
            LISTADO DE PELÍCULAS
        </h1>
        <ul>
            <% for( let i = 0; i < movies.length; i++ ) { %>
                <li>
                    <a class="cool-link" href="/movies/detail/<%= movies[i].id %>">
                        <%= movies[i].title %>
                    </a>
                </li>
            <% } %>
        </ul>
    </div>
